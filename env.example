# Database (Coolify managed PostgreSQL)
DATABASE_URL=postgresql://postgres:password@postgres:5432/linkedin_leads

# Redis (Coolify managed Redis for job queue)
REDIS_URL=redis://redis:6379

# LinkedIn credentials (for scraping)
LINKEDIN_EMAIL=your-linkedin-email@example.com
LINKEDIN_PASSWORD=your-linkedin-password

# Google Sheets Configuration
GOOGLE_SHEETS_ID=your-google-sheets-id-here
GOOGLE_SHEET_NAME=Sheet1
GOOGLE_APPLICATION_CREDENTIALS=./google-credentials.json

# Google Sheets API (Service Account method - alternative)
GOOGLE_SHEETS_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_SHEETS_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----
GOOGLE_SHEETS_PROJECT_ID=your-google-project-id

# App settings (Coolify deployment)
NEXT_PUBLIC_APP_URL=https://your-domain.com
NODE_ENV=production
PORT=3000

# API Keys
APIFY_API_KEY=your-apify-api-key-here

# AI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENROUTER_API_KEY=your-openrouter-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Supabase Configuration (Project: Hetzner)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here
SUPABASE_JWT_SECRET=your-supabase-jwt-secret-here
SUPABASE_DB_PASSWORD=your-supabase-db-password

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-app-password

# Test Email (for development/testing)
TEST_EMAIL=your-test-email@example.com

# Scraping settings (production optimized)
SCRAPER_CONCURRENCY=3
SCRAPER_DELAY_MIN=3000
SCRAPER_DELAY_MAX=7000

# Rate limiting (production settings)
MAX_JOBS_PER_USER=10
JOB_TIMEOUT_MINUTES=45

# Coolify specific (optional - Coolify may auto-inject these)
COOLIFY_APP_ID=your-app-id
COOLIFY_DEPLOYMENT_UUID=deployment-uuid 